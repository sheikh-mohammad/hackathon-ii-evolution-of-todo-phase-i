{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ticklisto.example.com/schemas/gmail-config.json",
  "title": "GmailConfig",
  "description": "Gmail API configuration for sending reminder emails",
  "type": "object",
  "required": ["user_email", "credentials_path", "token_path", "enabled"],
  "properties": {
    "user_email": {
      "type": "string",
      "format": "email",
      "description": "User's email address"
    },
    "credentials_path": {
      "type": "string",
      "description": "Path to OAuth2 credentials JSON file"
    },
    "token_path": {
      "type": "string",
      "description": "Path to stored access token file"
    },
    "enabled": {
      "type": "boolean",
      "description": "Whether email reminders are enabled"
    },
    "last_auth_at": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "When last authenticated with Gmail API"
    },
    "quota_remaining": {
      "type": ["integer", "null"],
      "minimum": 0,
      "description": "Remaining Gmail API quota (if tracked)"
    }
  }
}
